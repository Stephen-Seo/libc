#!/usr/bin/make -f
TARGET=x86_64-unknown-redox

%:
	mkdir -p build
	dh $@ --builddirectory=build

override_dh_auto_configure:
	mkdir -p build
	cd build && ../../../../binutils-gdb/configure \
		--target="$(TARGET)" \
		--prefix=/usr \
		--with-sysroot="/usr/$(TARGET)" \
		--disable-gdb \
		--disable-nls \
		--disable-werror

override_dh_auto_install:
	dh_auto_install
	rm -rf "debian/x86-64-unknown-redox-binutils/usr/share/info"
